<Window x:Class="Assignment_11._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_11._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" HorizontalAlignment="Center" Content="Pet Journal" FontSize="30" FontFamily="Arial" FontWeight="Bold" VerticalAlignment="Center"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BorderBrush="BlueViolet" BorderThickness="3" Margin="5">
                <StackPanel Margin="5">
                    <Label Content="Pet Records to View" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Grid Margin="5" x:Name="SelectPetGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>                            
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <ComboBox Name ="PetListCombo" Grid.Row="0" Grid.Column="0"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="Select Pet/Show Events" Click="GetPetById"/>
                        <Label Grid.Row="1" Grid.Column="0" Content="Name"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding PetName}"/>
                        <Label Grid.Row="2" Grid.Column="0" Content="Type"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding PetType}"/>
                        <Label Grid.Row="3" Grid.Column="0" Content="Breed"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding PetBreed}"/>

                    </Grid>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" BorderBrush="Orange" BorderThickness="3" Margin="5">
                <StackPanel Margin="5">
                    <Label Content="Add/Update Event" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Grid Margin="5" x:Name="AddorUpdateEventGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Content="Event Date"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding EventDate}"/>
                        <Label Grid.Row="1" Grid.Column="0" Content="Event Type"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding EventType}"/>
                        <Label Grid.Row="2" Grid.Column="0" Content="Description"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding EventDescription}"/>
                        <Label Grid.Row="3" Grid.Column="0" Content="Comments"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding EventComments}"/>
                        <Button Name="btnAdd" Grid.Row="4" Grid.Column="0" Content="Add New" Click="AddEvent"/>
                        <Button Name="btnSaveEdit" Grid.Row="4" Grid.Column="1" Content="Save Edit" Click="UpdateEvent"/>
                    </Grid>
                </StackPanel>
            </Border>            
        </Grid>
        <DataGrid Name="EventDG" Grid.Row="2" AutoGenerateColumns="False" Margin="5" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Event ID" Binding="{Binding EventId}"/>
                <DataGridTextColumn Header="Event Date" Binding="{Binding EventDate}"/>
                <DataGridTextColumn Header="Event Type" Binding="{Binding EventType}"/>
                <DataGridTextColumn Header="Description" Binding="{Binding EventDescription}"/>
                <DataGridTextColumn Header="Comments" Binding="{Binding EventComments}"/>
                <DataGridTemplateColumn Header="Update Event">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Edit" Click="UpdateEventforEdit"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Delete Event">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete" Click="DeleteEvent"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
